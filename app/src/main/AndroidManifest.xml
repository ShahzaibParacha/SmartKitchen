<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartkitchen">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartKitchen">
        <activity android:name=".presentation.ViewRecipeInfoActivity"></activity>
        <activity android:name=".presentation.RecipeListActivity" />
        <activity android:name=".presentation.ViewInformationActivity" />
        <activity android:name=".presentation.AddInventoryItemActivity" />
        <activity android:name=".presentation.AddGroceryItemActivity" />
        <activity android:name=".presentation.EditGroceryListItemActivity" />
        <activity android:name=".presentation.EditInventoryItemActivity" />
        <activity android:name=".presentation.CurrentInventoryActivity" />
        <activity android:name=".presentation.GroceryListActivity" />
        <activity android:name=".application.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>